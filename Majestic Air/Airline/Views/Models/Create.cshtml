@model Airline.Models.ModelViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div>
                Number of Seats:
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="Tickets1stClass" class="control-label"></label>
                <input asp-for="Tickets1stClass" class="form-control" />
                <span asp-validation-for="Tickets1stClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketsBusiness" class="control-label"></label>
                <input asp-for="TicketsBusiness" class="form-control" />
                <span asp-validation-for="TicketsBusiness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketsPremiumEconomy" class="control-label"></label>
                <input asp-for="TicketsPremiumEconomy" class="form-control" />
                <span asp-validation-for="TicketsPremiumEconomy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketsEconomy" class="control-label"></label>
                <input asp-for="TicketsEconomy" class="form-control" />
                <span asp-validation-for="TicketsEconomy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Create</button>
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i>Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
